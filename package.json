{
  "name": "usps-rural-carrier-chat",
  "version": "1.0.0",
  "description": "A Progressive Web App (PWA) chat application for USPS rural carriers.",
  "private": true,
  "scripts": {
    "start:server": "cd server && npm start",
    "dev:server": "cd server && npm run dev",
